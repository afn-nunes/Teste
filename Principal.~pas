unit Principal;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, AltUsrERP, AltLib, DConnectionERP,AltLibTypes,AltLibSist,udtmERP;

type
  TForm1 = class(TForm)
    procedure FormCreate(Sender: TObject);
  private
    FUsuarioERP: TUsuariosErp;
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.FormCreate(Sender: TObject);
begin
  FUsuarioERP:= TUsuariosERP.create();
  FUsuarioERP.Connection:= dtmConnection.mscConnectionERP;

  if FUsuarioERP.ShowLogin(ttlTerminar, cAcessosGerais,GetVersaoSistema(cAcessosGerais)) then
    showMessage('Teste');
end;

end.
